<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1c0a41</item>
        <item name="colorPrimaryDark">@color/common_bg</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeButtonPrimary" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">60dp</item>
        <item name="cornerRadius">25dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="ThemeButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:padding">0dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/primaryStroke</item>
    </style>

    <style name="ThemeWhiteButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">25dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="ThemeButtonSecondaryOption" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">25dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/primaryStroke</item>
    </style>

    <style name="ProgressTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="ProgressGreyTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">#d9d9d9</item>
    </style>

    <style name="ProgressWhiteTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="HeadingText">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textHeading</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="SubHeadingText">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textHeading</item>
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="RoundedBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ProfileTabLayout">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
</resources>
